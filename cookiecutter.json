{
    "target": "instance",
    "var_location": "{{ cookiecutter.target }}/var",
    "log_location": "{{ cookiecutter.var_location }}/log",

    "http_port": "8080",
    "http_host": "localhost",
    "threads": "4",
    "max_request_body_size": "1073741824",
    "clear_untrusted_proxy_headers": ["false", "true"],
    "environment": {
        "zope_i18n_compile_mo_files": "true",
        "CHAMELEON_CACHE": "{{ cookiecutter.var_location }}/cache"
    },

    "debug_mode": ["off", "on"],
    "verbose_security": ["off", "on"],
    "use_profiler": ["no", "yes"],

    "load_zcml": {
        "package_metas": [],
        "package_includes": [],
        "package_overrides": [],
        "locales_directory_location": "",
        "include_file_location": "",
        "overrides_file_location": "",
        "resources_directory_location": ""
    },

    "database": ["direct", "relstorage", "zeo"],
    "blobs_mode": ["shared", "cache"],

    "filestorage_location": "{{ cookiecutter.var_location }}/filestorage/Data.fs",
    "blobs_location": "{{ cookiecutter.var_location }}/blobs",


    "relstorage_server": ["postgresql", "mysql", "oracle", "sqllite3"],

    "postgresql_driver": ["psycopg2", "psycopg2 gevent", "psycopg2cffi", "pg8000"],
    "postgresql_dsn": "",

    "mysql_driver": ["MySQLdb", "gevent MySQLdb", "PyMySQL", "C MySQL Connector/Python"]

}